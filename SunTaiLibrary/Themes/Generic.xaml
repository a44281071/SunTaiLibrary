  <Style TargetType="{x:Type cc:DiagramListBox}">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="att:SelectorAttached.SelectNoneWhenClickBlankArea" Value="True" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type cc:DiagramListBox}">
          <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <Viewbox>
              <cc:DiagramCanvas Width="{TemplateBinding DiagramWidth}"
                                Height="{TemplateBinding DiagramHeight}"
                                AllowDragOutOfView="False"
                                Background="{TemplateBinding Background}"
                                ClipToBounds="True"
                                IsItemsHost="True" />
            </Viewbox>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
